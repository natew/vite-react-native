{
  "name": "onechat",
  "version": "workspace:^",
  "private": true,
  "sideEffects": false,
  "files": [],
  "type": "module",
  "scripts": {
    "backend": "yarn docker up",
    "backend:clean": "yarn docker down --volumes",
    "backend:restart": "yarn backend:clean; yarn backend",
    "build:web": "one build",
    "build:icon": "tauri icon ./src-tauri/icons/icon.png",
    "build:tauri": "tauri build --debug",
    "data:reset": "docker compose down --volumes; rm /tmp/onechat_replica.db",
    "dev": "one dev",
    "dev:clean": "one dev --clean",
    "dev:tauri": "tauri dev",
    "dev:ios": "one run:ios",
    "dev:android": "one run:android",
    "docker": "docker compose --env-file .env",
    "migrate:auth": "npx @better-auth/cli migrate --config ./src/better-auth/auth.ts",
    "seed": "tsx ./src/postgres/seed.ts",
    "serve": "one serve",
    "zero": "yarn zero:build-schema && zero-cache --schema-file ./src/zero/zero-schema.json",
    "zero:build-schema": "cd ./src/zero && zero-build-schema -p './schema.ts'",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.709.0",
    "@aws-sdk/lib-storage": "^3.709.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@docsearch/react": "^3.6.1",
    "@floating-ui/react": "^0.27.0",
    "@rocicorp/zero": "^0.9.2024122100",
    "@shopify/react-native-skia": "^1.7.6",
    "@tamagui/config": "^1.121.2",
    "@tamagui/helpers-icon": "^1.121.2",
    "@tamagui/linear-gradient": "^1.121.2",
    "@tamagui/lucide-icons": "^1.121.2",
    "@tamagui/proxy-tabbable": "^1.121.2",
    "@tamagui/themes": "^1.121.2",
    "@tamagui/toast": "^1.121.2",
    "@tanstack/react-table": "^8.20.6",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-deep-link": "^2.0.1",
    "@tauri-apps/plugin-fs": "^2.2.0",
    "@tauri-apps/plugin-shell": "^2",
    "@uiw/react-md-editor": "^4.0.5",
    "@vxrn/color-scheme": "workspace:^",
    "@vxrn/emitter": "workspace:^",
    "better-auth": "1.0.23-beta.3",
    "burnt": "^0.12.2",
    "expo": "~52.0.17",
    "flexsearch": "^0.7.43",
    "one": "workspace:^",
    "pg": "^8.13.1",
    "react": "^18.3.1",
    "react-hotkeys-hook": "^4.6.1",
    "react-native": "0.76.4",
    "react-native-reanimated": "~3.16.5",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "4.4.0-rc.1",
    "react-native-svg": "15.8.0",
    "tamagui": "^1.121.2",
    "ts-deepmerge": "^7.0.2",
    "valtio": "^2.1.2",
    "virtua": "^0.39.2"
  },
  "devDependencies": {
    "@react-native-community/cli": "15.1.3",
    "@tamagui/vite-plugin": "^1.121.2",
    "@tauri-apps/cli": "^2",
    "@types/pg": "^8.11.10",
    "tsx": "^4.19.0",
    "unicode-emoji": "^2.6.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
